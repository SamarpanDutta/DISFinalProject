@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="card">
        <div class="card-content">
            <div class="row center-align">
                <form action="thanks.html">
                    <div class="input-field col s12">
                        <h4 class="center-align">Know about a new park but cant find here?</h4>
                        <h5 class="center-align">Share the details and help us enrich our knowledge-base</h5>
                    </div>
                    <div class="input-field col s12">
                        <input placeholder="XYZ National Park" id="parkname" type="text" class="validate">
                        <label for="parkname">Name of the Park</label>
                    </div>
                    <div class="input-field col s12">
                        <input placeholder="https://www.examplepark.com" id="url" type="text" class="validate">
                        <label for="url">URL of the Park Website</label>
                    </div>
                    <div class="input-field col s12">
                        <textarea id="description" class="materialize-textarea"></textarea>
                        <label for="description">Description of the Park</label>
                    </div>
                    <div class="input-field col s12">
                        <select>
                            <option value="" disabled selected>Choose your option</option>
                            <option value="1">Florida</option>
                            <option value="2">Texas</option>
                            <option value="3">California</option>
                        </select>
                        <label>State</label>
                    </div>
                    <div class="input-field col s12">
                        <select multiple>
                            <option value="" disabled selected>Choose your option</option>
                            <option value="1">Arts & Culture</option>
                            <option value="2">Astronomy</option>
                            <option value="3">Camping</option>
                            <option value="4">Hiking</option>
                            <option value="4">Scuba Diving</option>
                        </select>
                        <label>Activities Supported</label>
                    </div>
                    <div class="input-field col s12">
                        <select multiple>
                            <option value="" disabled selected>Choose your option</option>
                            <option value="1">African American Heritage</option>
                            <option value="2">American Revolution</option>
                            <option value="3">Ancient Seas</option>
                        </select>
                        <label>Related Topics</label>
                    </div>
                    <div class="input-field col s12">
                        <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>